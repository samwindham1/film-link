{
    "compilerOptions": {
        "outDir": "./public/",
        "noImplicitAny": true,
        "module": "es6",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@api": ["api"],
            "@api/*": ["api/*"],
            "@components": ["app/components"],
            "@routes/*": ["app/routes/*"]
        }
    },
    "include": ["src/**/*"]
}
